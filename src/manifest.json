{
    "description" : "Play media on current URL in external application.",
    "manifest_version": 2,
    "name": "play-with",
    "version": "0.1",
    "default_locale": "en",

    "background": {
        "scripts" : ["background.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["play.js"]
    }],

    "permissions": ["activeTab", "contextMenus", "storage"],

    "browser_action": {
        "chrome_style": true,
        "default_title": "__MSG_actionName__",
        "default_icon": "icons/play-16.png"
    },

    "icons": {
        "16": "icons/play-16.png",
        "48": "icons/play-48.png",
        "128": "icons/play-128.png"
    }
}
